
<div class="row card white">
    <div class="row">
        <div class="col s4">
            <%= image_tag "monsters/#{@monster.image}" %>
        </div>
        <div class="col s6">
            <h2><%= @monster.name %></h2>
            <p>Honger: <%= @monster.health %> / 100</p>
            <div class="progress" style="height: 20px;">
                <div class="determinate" style="width: <%= @monster.health %>%"></div>
            </div>
            <p>feeds / dag</p>
            <p>feeds / week</p>
            <p>feeds / maand</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s6">
        <div id="monster_detail_map" 
            data-monster-id="<%= @monster.id %>" 
            data-monster-longitude="<%= @monster.longitude %>"
            data-monster-latitude="<%= @monster.latitude %>"
            data-monster-image="<%= @monster.image %>"
        ></div>
        <div class="card">
            <h4>Geschiedenis</h4>
        </div>
    </div>
    <div class="col s6 card">
        <h4>Laatste voedingen</h4>
    </div>
</div>



<% provide(:title, "Ranking") %>

<div class="row">
    <table class="highlight">
    <thead>
      <tr>
          <th style="width:15%;">Monster</th>
          <th>Monster info</th>
      </tr>
    </thead>

    <tbody>
    <% @ranking_monsters.each do |monster| %>
      <tr>
        <td>
            <%= monster.name %>

            <br>
            <a href="<%= url_for(monster) %>">
            <%= image_tag "monsters/#{monster.image}", :class => "ranking-image"  %>
        </td>
        <td>
        <%= monster.name %>
        <br>
        <div class="progress" style="height: 20px; text-align:center;">
            <div class="determinate <%= monster.health_color %>" style="width: <%= monster.health %>%"><%= monster.health %>%</div>
        </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>




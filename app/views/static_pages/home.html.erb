<% provide(:title, "Ludejo") %>


<h2>Happy monsters</h2>
<div class="row">
    <% @happy_monsters.each do |monster| %>
        <div class="col s6 m4 l3">
        <div class="card">
            <div class="card-image">
            <%= image_tag "monsters/00000001.jpeg" %>
            </div>
            <div class="card-content">
            <span class="card-title"><%= monster.name %></span>
            <p><%= monster.health %></p>
            <div class="progress" style="height: 20px;">
                <div class="determinate" style="width: <%= monster.health %>%"></div>
            </div>
            </div>
            <div class="card-action">
                <i class="material-icons">search</i>
                <%= link_to 'Find me', monster %>
            </div>
        </div>
        </div>
    <% end %>
</div>

